\subsubsection{Partes componentes e zonas de perigo das máquinas do conjunto de máquinas de tecer roupas sem costura}
% ###################################
% Imagem com anotações
% ###################################
\begin{tikzpicture}[line width=3pt]	
  \node[anchor=south west,inner sep=0] (image) at (0,0,0) %{\includegraphics[width=4in,angle=-90]{IMG_4291}};
  {\includegraphics[width=0.7\textwidth,angle=-90]{img/IMG_4291}};	
  \begin{scope}[x={(image.south east)},y={(image.north west)}]
    \draw[red,dashed,-latex] (0.8,0.8) -- +(1.1in,0.2in)node[anchor=west] {\Large\textbf{1}};
    \draw [red](0.8,0.8) circle (10pt);
