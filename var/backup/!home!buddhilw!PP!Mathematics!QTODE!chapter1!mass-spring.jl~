# yv = plot(sol, plotdensity=1000, vars=(1,2))
# yt = plot(sol, plotdensity=1000, vars=(1,3))
# vt = plot(sol, plotdensity=1000, vars=(2,3))
# plot(plot(yvt),plot(yv, yt, vy, layout=(1,3),w=1), layout=(2,1))
